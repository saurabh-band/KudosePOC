<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KudosePOC.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:KudosePOC"
    Shell.FlyoutBehavior="Disabled"
    Title="KudosePOC"
    BackgroundColor="Gray">

    <TabBar Shell.TabBarForegroundColor="LightSkyBlue">
        <Tab Title="Home page">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"
                          Route="MainPage"
                          Icon="home.png"/>
        </Tab>
        <Tab Title="Kudos page">
            <ShellContent ContentTemplate="{DataTemplate local:Kudose}"
                          Route="Kudose" 
                          Icon="kudosee.png"/>
        </Tab>
    </TabBar>
</Shell>
